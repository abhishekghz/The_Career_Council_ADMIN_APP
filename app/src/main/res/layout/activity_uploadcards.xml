<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fifteen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadcards">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="593dp"
        app:layout_constraintGuide_percent="0.185" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintGuide_percent="0.043" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="393dp"
        app:layout_constraintGuide_percent="0.956" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="712dp"
        app:layout_constraintGuide_percent="0.975" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline84"
        app:layout_constraintEnd_toStartOf="@+id/guideline83"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="@+id/guideline82"
        app:layout_constraintTop_toTopOf="@+id/guideline81"
        app:layout_constraintVertical_bias="0.333">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgpreview"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4"
                android:text="Preview Image"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_choose_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_look"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:text="SELECT IMAGE"
                android:textColor="#FFFEFE" />

            <Button
                android:id="@+id/uploadchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR CHAT SCREEN"
                android:textColor="#000000"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/uploadres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR RESUME BUILDING"
                android:textColor="#000000"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/uploadjob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR JOB SEARCH"
                android:textColor="#000000" />

            <Button
                android:id="@+id/uploadlinkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR LINKEDIN UPGRADATION"
                android:textColor="#000000" />

            <Button
                android:id="@+id/uploadcar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR CAREER GUIDANCE"
                android:textColor="#000000" />

            <Button
                android:id="@+id/uploadcam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR CAMPUS TO CORPORATE"
                android:textColor="#000000" />

            <Button
                android:id="@+id/uploadwshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD FOR WORKSHOPS"
                android:textColor="#000000" />

            <Button
                android:id="@+id/uploadqr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#88ABCF"
                android:padding="15dp"
                android:text="UPLOAD QR CODE"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>